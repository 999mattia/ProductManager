<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductManager.DetailPage"
             x:Name="header"
             Title="DetailPage">
    <VerticalStackLayout>
        <Label
            x:Name="nameLabel"
            Text="Name: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
             />
            <Label
            x:Name="stockLabel"
            Text="Stock: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
             />
            <Label
            x:Name="priceLabel"
            Text="Price: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
             />
            <Label
            x:Name="inProductionLabel"
            Text="In production: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
             />
            <Label
            x:Name="releaseDateLabel"
            Text="Release date: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
             />
             <Label
            x:Name="typeLabel"
            Text="Type: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
             />
    </VerticalStackLayout>
</ContentPage>