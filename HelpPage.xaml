<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductManager.HelpPage"
             Title="Help and information">
    <VerticalStackLayout>
        <Label 
            Text="This project is made for educational purposes only."
            HorizontalOptions="Center"
            Margin="0,20,0,0"
             />
<Label 
            Text="If you have problems with the controls of the app or if you have any other questions/problems, please contact me at: mattia.gisiger@gmail.com"
            HorizontalOptions="Center"
            Margin="0,20,0,0"
             />

<Label 
            Text="Do you like this app?"
            HorizontalOptions="Center"
            Margin="0,20,0,0"
             />

            <CheckBox VerticalOptions="Center" x:Name="checkbox"/> 

        <Button Margin="0,10,0,0"
                x:Name="submit"
                Text="Submit"
                SemanticProperties.Hint="Submit"
                Clicked="OnSubmitClick"
                HorizontalOptions="Center"  />


   </VerticalStackLayout>
</ContentPage>