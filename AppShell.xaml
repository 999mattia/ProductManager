<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProductManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProductManager"
    Shell.FlyoutBehavior="Disabled">
<TabBar x:Name="tabs">
            <Tab Title="Overview" Icon="/Resources/Images/overview.svg"><ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/></Tab>
            <Tab Title="Add product" Icon="/Resources/Images/add.svg"><ShellContent ContentTemplate="{DataTemplate local:AddPage}" Route="AddPage"/></Tab>
        </TabBar>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        

</Shell>
